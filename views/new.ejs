<%- include("partials/header") %>
<div class="container">

    <h1 style="text-align: center; color : white"> Add your data here</h1>

<div   style="width: 40% ; margin: 25px auto; padding: 25px; background-color:honeydew ;" >
    
<form action="/sheets/<%=currentUser._id%>/new" method="POST"> 
    
<div class="form-group">
    <input readonly class="form-control"    type="text" name="username" value="<%=currentUser.username%>">
    </div>
    
    <div class="form-group">
<input class="form-control" id="datePicker"  type="date" name="date">
</div>
<div class="form-group">
<input class="form-control"    type="text" name="topic" placeholder="What did you study?">
</div>
<div class="form-group">
    <input class="form-control"    type="number" name="time" placeholder="Time in minutes">
    </div>

<div class="form-group">
<button class = "btn btn-lg btn-success"  >Add </button>
</div>
</form>
<p> <a class="btn btn-success" href="/sheets/<%=currentUser._id%>"> Go Back </a> 
</p>
</div>
</div>


<%- include("partials/footer") %>
          <% if(!currentUser) {%>
          <li><a href="/login">Login</a></li>
          <li><a href="/signup">Sign Up</a></li>
          <%} else {%>
             <li>
            <a href="/<%=currentUser._id%>/ctl">
              Welcome <i><%= currentUser.username.toUpperCase() %></i></a>
          </li>
            <li><a href="/sheets/<%=currentUser._id%>">Sheets</a></li>
          <li><a href="/tdl/<%=currentUser._id%>">ToDoList</a></li>
         
          <li id="theme"><a id="themetext"  href='#'>Dark</a></li>
          <li><a href="/logout">Logout</a></li>
          <%}%>
          </ul>
        </div>
      </div>
     
    </nav>
       


<h2>Here is Graphical view of your progress</h2>
<canvas id="myChart"  width="700%" height="300%"  ></canvas>

<script>


var data = <%-JSON.stringify(founduser.data)%>;
var xlabels = [];
var ylabels = [] ;

data.forEach(function(data) {
    xlabels.push(data.date);
    ylabels.push(data.time);
    


});

var ctx = document.getElementById('myChart');
Chart.defaults.global.defaultFontColor = 'white';
var myChart = new Chart(ctx, {
    type: 'line',
    data: {labels: xlabels,
        datasets: [{
            label: 'Time in minutes',
            data: ylabels,
            backgroundColor: 'rgba(38, 247, 94, 0.7)',
            borderColor: 'rgba(38, 247, 94, 1)',             
            borderWidth: 1
        }]
    },
    options: { responsive : false , scaleFontColor : "#FFFFFF"
,        elements: {
        line: {
            tension: 0
        }
}, scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }

}
        
        
}); 


</script>











<%- include("partials/header") %>


<style > 
canvas{
    margin: 0 auto;
       
}

body{
    background: #093028;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #237A57, #093028);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #237A57, #093028); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
}

#container {

width: 100%;

}

h2{
    margin: 50px auto;
    color: white;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    text-align: center;
}


</style>

<div class="chart-conatiner" style="width: 95%; max-width: 480px; margin: 10px auto; border: 2px white solid; border-radius: 25px; padding: 20px; padding-bottom: 130px; 
    background: linear-gradient(to right, #2f2f31, #454547);
        ">
    
    <h2>Here is Graph <br />Of Your Progress</h2>

    <canvas  id="myChart" width="95%" height="50%" style="display: block;  " ></canvas>
    <a href="/sheets/<%=founduser.id%>" class="btn btn-success" style="float: right; margin-top: 15px; margin-bottom: 8px;">Go back</a>
</div>

<script>


var data = <%-JSON.stringify(founduser.data)%>;
var xlabels = [];
var ylabels = [] ;

data.forEach(function(data) {
    xlabels.push(data.date);
    ylabels.push(data.time);
    


});

var ctx = document.getElementById('myChart');
Chart.defaults.global.defaultFontColor = 'white';
var myChart = new Chart(ctx, {
    type: 'line',
    data: {labels: xlabels,
        datasets: [{
            label: 'Time in minutes',
            data: ylabels,
            backgroundColor: 'rgba(38, 247, 94, 0.7)',
            borderColor: 'rgba(38, 247, 94, 1)',             
            borderWidth: 1
        }]
    },
    options: { responsive : true , scaleFontColor : "#FFFFFF"
,        elements: {
        line: {
            tension: 0
        }
}, scales: {
        yAxes: [{
            ticks: {
                beginAtZero: true
            }
        }]
    }

}
        
        
}); 


</script>











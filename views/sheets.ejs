<%- include("partials/header") %>
<div class="container">
    <div style="text-align: center; color : white">
    
        <h1> Welcome to STT sheets</h1>
        <p>Here you will find all your previous data</p>

    </div>
    
        
<div   style="width: 100%; max-width: 480px; ;margin: 25px auto; padding: 25px; background-color:honeydew ;"  class="table-responsive container-fluid">
    <div class="text-right">
         <a   class="btn btn-primary" href="/sheets/<%=currentUser._id%>/new"> Add Data </a></button>
         <a   class="btn btn-primary" href="/sheets/<%=currentUser._id%>/graph"> See Graph </a></button>
    </div>

        
<table class="table"> 
    <col width="30%"> 
    <col width="40%"> 
        <col width="10%">
        <col width="20%">


    <tr>
      <th>Date</th>
      <th>Topic</th>
      <th>Time </th>
      <th>Update/Delete</th> 
    </tr>
    
            
    <% founduser.data.forEach(function(data){%>
      
        <tr>
                <td ><%=data.date%></td>
                <td><%=data.topic%></td>
                <td><%=data.time%></td>
             <td>   <form  action="/update/<%=data._id%>" method="GET"  > <button class="btn btn-warning btn-sm" style="margin-right: 8px;" ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button></form>  
                <form  action="/delete/<%=data._id%>?_method=delete" method="POST"   > <button class="btn btn-danger btn-sm" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button></form> 
            
                 </td>
                

        </tr>
    <%})%>

</table>





    

</div>
</div>


<%- include("partials/footer") %>
<%- include("partials/header") %>
<div class="container">
    <div style="text-align: center; color : white">
    
        <h1> Welcome to STT sheets</h1>
        <p>Here you will find all your previous data</p>

    </div>
    
        
<div   style="width: 100%; max-width: 480px; ;margin: 25px auto; padding: 25px; background-color:honeydew ; border-radius: 25px;"  class="table-responsive container-fluid">
    <div class="text-right">
         <a   class="btn btn-primary" href="/sheets/<%=currentUser._id%>/new"> Add Data </a></button>
         <a   class="btn btn-primary" href="/sheets/<%=currentUser._id%>/graph"> See Graph </a></button>
        <button class="btn btn-primary" id="stats">Statistics</button>
     
    </div>

    
<table class="table" id="datatable"> 
    <col width="5%">
    <col width="30%"> 
    <col width="40%"> 
        <col width="20%">
        <col width="5%">
        


    <tr>
       
      <th>Update</th> 
      <th>Date</th>
      <th>Topic</th>
      <th>Time </th>
      <th>Delete</th> 
    </tr>
    
            
    <% founduser.data.forEach(function(data){%>
      
        <tr>
            
            <td>   <form  action="/update/<%=data._id%>" method="GET"  > <button class="btn btn-warning btn-sm"  ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> </button></form>  </td>
            <td ><%=data.date%></td>
                <td><%=data.topic%></td>
                <td><%=data.time%></td>
            
             <td> <form  action="/delete/<%=data._id%>?_method=delete" method="POST"   > <button class="btn btn-danger btn-sm" ><span class="glyphicon glyphicon-trash" aria-hidden="true"></span> </button></form> 
             </td>
                

        </tr>
    <%})%>

</table>


<div class="change" id="pop">

    <table class="table" > 
        <col width="70%">
        
        <tr>
           
          <th>Statistics Criteria</th> 
          <th>Your Progress</th>
        </tr>
        
                
        <% var sum =0 ; var days = 0 %>
        <% founduser.data.forEach(function(data){%>

                <%sum += data.time%>
                <%days += 1 %>
                
            <%})%>  
            <tr>
               <td style="text-align: left;"> Total Time Studied (In Mins)</td>
               <td><%=sum%> (mins)</td>             
            </tr>
        
            <tr>
                   <td style="text-align: left;">         Total Time Studied (In Hours) </td>
                   <td> <%=Math.floor(sum/60)%> (hrs) <% var hours = Math.floor(sum/60) %></td>
            </tr>
    
            
            <tr>
                <td style="text-align: left;">         Daily Average Time(In Hours) </td>
                <td> <%=Math.floor((sum/60)/days)%>  (hrs)</td>
         </tr> 
            
        

    </table>
    


    <h3 class="jumbotron" style=" background: lightcyan; text-align: center; color: #0e61a8 ; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;">
        You have stufied for <%=days%> days. <br /> Keep up the good work
    
    
        <% if(currentUser.goal == 0) {%>
        <form  action="/<%=currentUser._id%>/goal?_method=put" method="POST"   > 
           <input type="number" name="goals" placeholder="Enter your goal (in Hours)">
            <input type="submit">
            </form>
        <%}else{%>
    <p style="margin-top:20px ;"> <strong> Your goal is : <%=currentUser.goal%> hours</strong> </p>
    <p id="percent"   style="color: #0e61a8;"> Current Progress : <%= Math.round((hours/currentUser.goal)*100) %> %
        <%var percent =  Math.round((hours/currentUser.goal)*100) %>
    </p>
            
    <div id="myProgress" >
        
        <div id="myBar" onclick='move()'> <%= Math.round((hours/currentUser.goal)*100) %>% </div>
      </div>

    <%}%>
    
    
    
    
    </h3>
</div>
</div>
</div>

<script>


var i = 0 
function move() {
    
var sump = 0 ;
    if (i<1) {
    var elem = document.getElementById("myBar");
    var goal = <%-JSON.stringify(founduser.goal)%>;
        
     var data = <%-JSON.stringify(founduser.data)%>;
        
     var j;
for (j = 0; j < data.length; j++) {
  sump += data[j].time
}
    var hours = sump/60 ;
    var width = Math.round((hours/goal)*100)
   
    
elem.style.width =  width + "%";
            i++;

} 
}



</script>


<script>

    $(document).ready(function(){
        
      $("#stats").click(function(){
        $("#datatable").fadeToggle();
        $("#pop").fadeToggle();
        if ($(this).text() == "Statistics")
       $(this).text("Table")
    else
       $(this).text("Statistics");
}
        
      );
    });

    </script>



<%- include("partials/footer") %>